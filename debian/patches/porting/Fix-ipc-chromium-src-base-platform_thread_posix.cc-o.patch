From: Mike Hommey <mh@glandium.org>
Date: Thu, 16 May 2013 11:44:49 +0200
Subject: Fix ipc/chromium/src/base/platform_thread_posix.cc on kFreeBSD and
 Hurd

---
 ipc/chromium/src/base/platform_thread_posix.cc | 8 ++++----
 1 file changed, 4 insertions(+), 4 deletions(-)

diff --git a/ipc/chromium/src/base/platform_thread_posix.cc b/ipc/chromium/src/base/platform_thread_posix.cc
index 801f35e..9f56a71 100644
--- a/ipc/chromium/src/base/platform_thread_posix.cc
+++ b/ipc/chromium/src/base/platform_thread_posix.cc
@@ -11,9 +11,9 @@
 #include <mach/mach.h>
 #elif defined(OS_LINUX)
 #include <sys/syscall.h>
-#if !defined(__FreeBSD__) && !defined(__NetBSD__) && !defined(__OpenBSD__) && !defined(__DragonFly__)
+#if !defined(__FreeBSD_kernel__) && !defined(__FreeBSD__) && !defined(__NetBSD__) && !defined(__OpenBSD__) && !defined(__DragonFly__) && !defined(__GNU__)
 #include <sys/prctl.h>
-#elif !defined(__NetBSD__)
+#elif !defined(__NetBSD__) && !defined(__FreeBSD_kernel__) && !defined(__GNU__)
 #include <pthread_np.h>
 #endif
 #include <unistd.h>
@@ -38,7 +38,7 @@ PlatformThreadId PlatformThread::CurrentId() {
   // into the kernel.
 #if defined(OS_MACOSX)
   return mach_thread_self();
-#elif defined(__FreeBSD__) || defined(__NetBSD__) || defined(__OpenBSD__) || defined(__DragonFly__)
+#elif defined(__FreeBSD_kernel__) || defined(__FreeBSD__) || defined(__NetBSD__) || defined(__OpenBSD__) || defined(__DragonFly__) || defined(__GNU__)
   // TODO(BSD): find a better thread ID
   return (intptr_t)(pthread_self());
 #elif defined(OS_LINUX)
@@ -91,7 +91,7 @@ void PlatformThread::SetName(const char* name) {
   pthread_set_name_np(pthread_self(), name);
 #elif defined(__NetBSD__)
   pthread_setname_np(pthread_self(), "%s", (void *)name);
-#else
+#elif !defined(__FreeBSD_kernel__) && !defined(__GNU__)
   prctl(PR_SET_NAME, reinterpret_cast<uintptr_t>(name), 0, 0, 0); 
 #endif
 }
