diff --git a/config/rules.mk b/config/rules.mk
index cd2059c..e66e66e 100644
--- a/config/rules.mk
+++ b/config/rules.mk
@@ -666,6 +666,14 @@ endif
 endif 
 
 #
+# GNU doesn't have path length limitation
+#
+
+ifeq ($(OS_ARCH),GNU)
+OS_CPPFLAGS += -DPATH_MAX=1024 -DMAXPATHLEN=1024
+endif
+
+#
 # MINGW32
 #
 ifeq ($(OS_ARCH),WINNT)
