---
 configure.in |    6 +++++-
 1 files changed, 5 insertions(+), 1 deletions(-)

diff --git a/configure.in b/configure.in
index bfbaee0..664a5c5 100644
--- a/configure.in
+++ b/configure.in
@@ -4587,6 +4587,11 @@ if test "$SYSTEM_JPEG" = 1; then
                      #endif ],
                    SYSTEM_JPEG=1,
                    [SYSTEM_JPEG= JPEG_CFLAGS= JPEG_LIBS=]) 
+fi
+
+MOZ_LIBJPEG_TURBO=
+if test -z "$SYSTEM_JPEG"; then
+    MOZ_LIBJPEG_TURBO=1
 fi 
 CFLAGS=$_SAVE_CFLAGS
 LDFLAGS=$_SAVE_LDFLAGS
@@ -4778,7 +4783,6 @@ VPX_AS_CONVERSION=
 VPX_ASM_SUFFIX=
